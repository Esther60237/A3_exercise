<div class="container mt-4" style="width: 500px;">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>名稱</label>
        <input type="text" class="form-control" id="inputEmail4" placeholder="" name="name" value="{{restaurant.name}}"
          required>
      </div>
      <div class=" form-group col-md-6">
        <label>英文名稱</label>
        <input type="text" class="form-control" id="inputPassword4" placeholder="" name="name_en"
          value="{{restaurant.name_en}}" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>類型</label>
        <input type="text" class="form-control" id="inputEmail4" placeholder="" name="category"
          value="{{restaurant.category}}" required>
      </div>
      <div class=" form-group col-md-4">
        <label>電話</label>
        <input type="number" class="form-control" id="inputPassword4" placeholder="02-0000-0000" name="phone"
          value="{{restaurant.phone}}" required>
      </div>
      <div class=" form-group col-md-2">
        <label>評分</label>
        <input type="number" class="form-control" id="inputPassword4" placeholder="1~5" min="0" max="5" step="0.1"
          name="rating" value="{{restaurant.rating}}" required>
      </div>

    </div>
    <div class=" form-group">
      <label>地址</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="台北市大安區..." name="location"
        value="{{restaurant.location}}" required>
    </div>
    <div class="form-group">
      <label>Google map</label>
      <input type="text" class="form-control" id="inputAddress2" placeholder="https://goo.gl/maps/..." name="google_map"
        value="{{restaurant.google_map}}" required>
    </div>
    <div class="form-group">
      <label>圖片位址</label>
      <input type="text" class="form-control" id="inputAddress2" placeholder="https://..." name="image"
        value="{{restaurant.image}}" required>
    </div>
    <div class="form-group">
      <label>簡介</label>
      <textarea class="form-control" id="inputAddress2" placeholder="" style="height: 150px;" name="description"
        required>{{restaurant.description}}</textarea>
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-success">Edit</button>
    </div>
  </form>

</div>